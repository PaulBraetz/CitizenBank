<AuthorizeView ForRights="new[] { CBCommon.Settings.CitizenBank.CITIZEN_RIGHT, PBCommon.Configuration.Settings.OwnerRight }">
	<AuthorizedRedirect TargetOnFail="/citizen">
		<StateMachineFrame>
			<TabFrame>
				<Tab State="0">
					<Localize Value="Create Transaction" />
				</Tab>
				<Tab State="1">
					<Localize Value="Transaction Offers" />
				</Tab>
				<!--
				<Tab State="0">
