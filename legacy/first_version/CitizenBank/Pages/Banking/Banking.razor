				<!--
				<Tab State="4">
					<Localize Value="Transaction Contracts" />
				</Tab>
				-->
			</TabFrame>
			<CBFrontend.UI.DataFrames.Citizens.CitizensFrame>
				<CBFrontend.UI.DataFrames.Accounts.AccountsFrame>
					<Step State="0">
						<DefaultPage>
							<Header>
								<PBTitle>
									<Localize Value="Create Transaction" />
								</PBTitle>
							</Header>
							<ChildContent>
								<CreateTransaction />
							</ChildContent>
						</DefaultPage>
					</Step>
					<Step State="1">
						<DefaultPage>
							<Header>
								<PBTitle>
									<Localize Value="Transaction Offers" />
								</PBTitle>
							</Header>
							<ChildContent>
								<TransactionOffers />
							</ChildContent>
						</DefaultPage>
					</Step>
					<!--
					<Step State="0">
						<Accounts />
					</Step>
					-->
					<!--
					<Step State="1">
						<Departments />
					</Step>
					<Step State="3">
