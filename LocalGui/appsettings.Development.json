{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Trace"
    },
    "File": {
      "Path": "app.log",
      "Append": true,
      "MinLevel": "Information", // min level for the file logger
      "FileSizeLimitBytes": 0, // use to activate rolling file behaviour
      "MaxRollingFiles": 0 // use to specify max number of log files
    }
  },
  "DoesCitizenExistSettings": {
    "QueryUrlFormat": "https://robertsspaceindustries.com/citizens/{0}"
  },
  "LoadBioSettings": {
    "QueryUrlFormat": "https://robertsspaceindustries.com/citizens/{0}"
  },
  "ApiServicesSettings": {
    "BaseUri": "https://localhost:7072",
    "Services": [
      {
        "Endpoint": "/authentication/does-citizen-exist",
        "Request": "CitizenBank.Features.Authentication.DoesCitizenExist"
      },
      {
        "Endpoint": "/authentication/register",
        "Request": "CitizenBank.Features.Authentication.Register.ServerRegister"
      },
      {
        "Endpoint": "/authentication/login",
        "Request": "CitizenBank.Features.Authentication.Login.ServerLogin"
      },
      {
        "Endpoint": "/authentication/load-prehashed-password-parameters",
        "Request": "CitizenBank.Features.Authentication.Login.LoadPrehashedPasswordParameters"
      }
    ]
  }
}
